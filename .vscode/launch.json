    "version": "0.2.0",
    "configurations": [
        {
            "name": "Android Debug",
            "type": "mono",
            "request": "attach",
            "address": "localhost",
            "port": 10000,
            "preLaunchTask": "Debug Android Build",
        },
        {
            "name": "Desktop Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Debug Desktop Build",
            "program": "${workspaceFolder}/MotoTrialRacer/Desktop/bin/Debug/net9.0/MotoTrialRacer",
        },
        {
            "name": "iOS Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Debug iOS Build",
            "program": "${workspaceFolder}/MotoTrialRacer/iOS/bin/Debug/net9.0-ios/MotoTrialRacer.dll",
        },
        {
            "name": "Windows Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Debug Windows Build",
            "program": "${workspaceFolder}/MotoTrialRacer/Windows/bin/Debug/net9.0-windows/MotoTrialRacer.exe",
        }
    ]
}
